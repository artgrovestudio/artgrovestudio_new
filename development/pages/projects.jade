- var pageIndex = 'projects';

doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    title Art Grove Studio
    link(rel='shortcut icon', href='img/favicon.png', type='image/png')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    meta(name='author', content='Savenok Oleg')
    meta(name='keywords', content='web,design,js,site')
    meta(name='Resource-type', content='Document')

    // Style		
    link(rel='stylesheet', type='text/css', href='css/loader.css')
    link(rel='stylesheet', type='text/css', href='css/style.css')
    
    // Animate.css
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css')

    // JQuery
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
    
    // PagePilling
    script(type='text/javascript', src='assets/js/jquery.pagepiling.js')
    
    // PagePilling Setting
    script(type='text/javascript').
      $(document).ready(function() {
        $('#pagepiling').pagepiling({
          direction: 'horizontal',
          anchors: ['strakhovskyi', 'module', 'tiny', 'kit'],
          sectionsColor: ['#f2f2f2', '#4BBFC3', '#555', '#222'],
          navigation: {
            'bulletsColor': '#fff',
            'position': 'bottom',
            'tooltips': false
          }
        });
        
        $('.arrow-next').click(function () {
          $.fn.pagepiling.moveSectionDown();
        });
        $('.arrow-prev').click(function () {
          $.fn.pagepiling.moveSectionUp();
        });
      });

  body(id='#{pageIndex}')
    //- .project-bg
    //-   .gradient
      
    //include _includes/_loader
    include _includes/_nav
    
    #pagepiling
      .section.strakhovskyi
        .gradient
        .project
          img(src="assets/img/strakhovskyi-mockup.png", alt="alt")
          .project-name
      .section  
      .section
      .section 
       
    
    // GSAP
    script(src='http://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/TweenMax.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/TimelineMax.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/easing/EasePack.min.js')
    script(type='text/javascript', src='js/main.js')
